<p id="notice"><%= notice %></p>

<h1>Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Source type</th>
      <th>Target</th>
      <th>Target type</th>
      <th>Source url</th>
      <th>Target url</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.source_id %></td>
        <td><%= alert.source_type %></td>
        <td><%= alert.target_id %></td>
        <td><%= alert.target_type %></td>
        <td><%= alert.source_url %></td>
        <td><%= alert.target_url %></td>
        <td><%= alert.message %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>
